               <children>
                  <MenuBar style="-fx-background-color: #9d9fab; -fx-border-color: #40414a;">
                    <menus>
                      <Menu fx:id="menuRechner" mnemonicParsing="false" onAction="#goToRechner" text="Rechner" />

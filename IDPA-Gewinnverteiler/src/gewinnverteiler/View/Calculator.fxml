                           <items>
                              <MenuItem mnemonicParsing="false" onAction="#goToResultat" />
                           </items></Menu>
                      <Menu fx:id="menuHilfe" mnemonicParsing="false" onAction="#goToHilfe" text="Hilfe" />
                    </menus>
                  </MenuBar>
                  <HBox alignment="TOP_CENTER" prefHeight="25.0" prefWidth="200.0">

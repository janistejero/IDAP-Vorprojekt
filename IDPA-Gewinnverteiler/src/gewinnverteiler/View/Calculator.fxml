                           <image>
                              <Image url="@../../Resources/calculator.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <font>
                        <Font size="16.0" />
                     </font>
                     <effect>
                        <DropShadow color="#4d4949" height="41.76" radius="18.835" width="35.58" />
                     </effect>
                  </Button>
                  <MenuBar style="-fx-background-color: #9d9fab; -fx-border-color: #40414a;">
                     <menus>
                        <Menu mnemonicParsing="false" />

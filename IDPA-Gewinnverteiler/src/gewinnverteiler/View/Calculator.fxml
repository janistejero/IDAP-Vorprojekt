                              <Label text="Nettogewinn" textFill="#d6d6d6">
                                 <font>
                                    <Font name="Arial" size="20.0" />
                                 </font>
                              </Label>
                              <Label text="Anzahl Aktien" textFill="#d6d6d6">
                                 <font>
                                    <Font name="Arial" size="20.0" />
                                 </font>
                              </Label>
                              <Label text="Partizipationskapital" textFill="#d6d6d6">
                                 <font>
                                    <Font name="Arial" size="20.0" />
                                 </font>
                              </Label>
                              <Label text="Gesetzliche Reserven" textFill="#d6d6d6">
                                 <font>
                                    <Font name="Arial" size="20.0" />
                                 </font>
                              </Label>
                              <Label text="Erfolgvortrag (+/-)" textFill="#d6d6d6">
                                 <font>
                                    <Font name="Arial" size="20.0" />
                                 </font>
                              </Label>
                           </children>
                           <padding>
                              <Insets left="50.0" />
                           </padding>
                        </VBox>
                        <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="200.0" prefWidth="150.0" spacing="20.0">
                           <children>
                              <Spinner fx:id="nettogewinnSpn" editable="true" />
                              <Spinner fx:id="aktienanzahlSpn" editable="true" />
                              <Spinner fx:id="partizipationskapitalSpn" editable="true" />
                              <Spinner fx:id="gesReservernSpn" editable="true" />
                              <Spinner fx:id="erfolgvortragSpn" editable="true" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets top="15.0" />
               </padding>
               <BorderPane.margin>
                  <Insets left="20.0" right="20.0" />
               </BorderPane.margin>
            </Pane>
         </center></BorderPane>
   </children>
</AnchorPane>

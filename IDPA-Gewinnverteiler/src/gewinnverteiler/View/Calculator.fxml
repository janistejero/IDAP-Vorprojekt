                        <Label alignment="CENTER" text="Gewinnverteilungsrechner" textFill="#ffffffe5" underline="true">
                           <font>
                              <Font name="Arial Rounded MT Bold" size="30.0" />
                           </font>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets top="30.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </top>
         <bottom>
            <VBox alignment="BOTTOM_CENTER" prefHeight="150.0" prefWidth="100.0" spacing="50.0" BorderPane.alignment="CENTER">
